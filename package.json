{
  "name": "rest-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsoa spec-and-routes && tsc --build",
    "start": "node build/index.js",
    "start:prod": "set NODE_ENV=production&& node build/index.js",
    "predev": "npm run tsoa",
    "dev": "set TS_NODE=TRUE&& nodemon --watch src src/index.ts",
    "tsoa": "tsoa spec-and-routes",
    "tsoa:mon": "nodemon --watch src --ignore src/generated -e ts,json -x tsoa spec-and-routes",
    "seed": "node build/seeds/index.js",
    "seed:start": "node build/seeds/index.js && node build/index.js",
    "build:e2e": "tsc -p tsconfig.e2e.json",
    "start:e2e": "mocha --timeout 4000 --file build/e2e.js \"build/e2e/**/*.js\"",
    "e2e": "npm run build:e2e && npm run start:e2e",
    "lint": "eslint src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeltaX-Community/node-rest-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DeltaX-Community/node-rest-api/issues"
  },
  "homepage": "https://github.com/DeltaX-Community/node-rest-api#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.1.0",
    "ts-simple-nameof": "^1.3.1",
    "tsoa": "^3.9.0",
    "typeorm": "^0.2.35"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.21",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^16.4.13",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.12",
    "openapi-typescript": "^4.0.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.4",
    "typescript": "^4.3.5"
  }
}
